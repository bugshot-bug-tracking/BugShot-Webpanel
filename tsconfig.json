{
	"compilerOptions": {
		"baseUrl": ".",
		"module": "ESNext",
		"target": "ESNext",
		"lib": ["DOM", "ESNext"],
		"strict": true,
		"esModuleInterop": true,
		"jsx": "preserve",
		"skipLibCheck": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"noUnusedLocals": true,
		"strictNullChecks": true,
		"forceConsistentCasingInFileNames": true,
		"types": [
			"vite/client",
			"vue/macros",
			"vite-plugin-pages/client",
			"vite-plugin-vue-layouts/client",
			"@intlify/unplugin-vue-i18n/client",
			"naive-ui/volar"
		],
		"paths": {
			"~/*": ["src/*"]
		}
	},
	"exclude": ["dist", "node_modules"]
}
